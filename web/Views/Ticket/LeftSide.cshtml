@model Ticketing.TicketModel.Proposal



<h4>Ticketing System</h4>
<hr>
<h5><strong>Current Status</strong></h5>
<div class="row">
    <div class="col-lg-12">
        <span class="label label-default">
            @Model.Ticket.Status.LastOrDefault().Status
        </span>

        <a href="#" data-toggle="popover" id="TicketStatusHistory" title="History of Ticket Status" data-content="
           @foreach(var h in Model.Ticket.Status)
           {
               @:On @h.Version.ToShortDateString() | @h.Status
           }
           "><span style="margin-left: 10px;">history</span></a>
    </div>



</div>
<hr>
<h5><strong>Take action</strong></h5>
<div class="row">
    <div class="col-lg-12">
        <button class="btn btn-success">
            Accept Proposal
        </button>


    </div>
    <div class="col-lg-12">
        <button class="btn btn-warning">
            Reject Proposal
        </button>


    </div>



</div>
<hr>
<h5><strong>Ticket Type </strong></h5>
<p>@Model.DegreeType.Name  @Model.ProposalType.Name</p>
<hr>
<h5><strong>Contributors</strong></h5>

<div class="panel-group col-lg-10 " id="TicketContributors">
    @foreach (var c in Model.Ticket.Contributors)
    {

        <div class="panel panel-default ">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#@c.User.LastName">
                        @c.RoleInTicket.Name
                    </a>
                </h4>
            </div>
            <div id="@c.User.LastName" class="panel-collapse collapse">
                <div class="panel-body">
                    @c.User.LastName

                    @if (c.Status.Equals("Approved"))
                    {
                        <span class="label-success">@c.Status</span>
                    }
                    else
                    {
                        <span class="label-warning">@c.Status</span>
                    }
                </div>
            </div>
        </div>



    }
</div>


<div class="row">
    <div></div>
</div>

