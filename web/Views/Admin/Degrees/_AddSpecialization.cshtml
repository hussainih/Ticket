@model Guid


@using (Ajax.BeginForm("PostASpecialization", "Admin", null,
new AjaxOptions
{

    HttpMethod = "POST",
    InsertionMode = InsertionMode.InsertAfter,
    UpdateTargetId = Model + "Specializations",
    OnSuccess = "FadeOutUserInfo",

}

))
{
    @Html.AntiForgeryToken()
 
    <hr />
    <div class="form-horizontal">

        @Html.Hidden("DegreeProgramID", Model)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Schwerpunkt", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Name", new { htmlAttributes = new { @class = "form-control", placeholder = "Schwerpunkt / Vertiefungen" } })
                @Html.ValidationMessage("Can't be Empty", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Beschreibung", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Description", new { htmlAttributes = new { @class = "form-control", @rows = "5" } })

            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>


}

